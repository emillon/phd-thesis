\newlength{\mylengthcolorbox}

\newenvironment{blockbox}{%
\setlength{\fboxsep}{1pt}%
\setlength{\fboxrule}{1pt}%
\setlength{\mylengthcolorbox}{\textwidth}%
\addtolength{\mylengthcolorbox}{-2\fboxsep}%
\addtolength{\mylengthcolorbox}{-2\fboxrule}%
\begin{Sbox}%
\begin{minipage}{\mylengthcolorbox}}%
{\end{minipage}\end{Sbox}\color{myblue}{\dashbox{\TheSbox}}}


\setbeamertemplate{block begin}
{
  \par\vskip\medskipamount%
  \begin{blockbox}\begin{beamercolorbox}[sep=0.5ex,wd=\mylengthcolorbox]{block title}
  \usebeamerfont*{block title}\insertblocktitle%
  \end{beamercolorbox}%
  {\parskip0pt\par}%
  \ifbeamercolorempty[bg]{block title}
  {}
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[sep=0.5ex, vmode, wd=\mylengthcolorbox]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
}

\setbeamertemplate{block end} 
{\end{beamercolorbox}\end{blockbox}\vskip\smallskipamount}

