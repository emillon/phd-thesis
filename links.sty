\def\linkline#1#2#3{%
  \refstepcounter{lnsc}%
  \def\truc{[\nanchor{\arabic{lnsc}}]}%
  \item[\truc]%
  \label{link:#1}%
  \href{#3}{#2%
  {%
    \def\oldt{~}%
    \def~{\textasciitilde}\\%
    {\footnotesize \textsf #3}
    \def~{\oldt}%
  }}%
}

\def\deflink#1#2#3{
  {%
    \def\oldt{~}%
    \def~{\noexpand~}%
    \immediate\write\lns{\noexpand\linkline{#1}{#2}{#3}}%
    \def~{\oldt}%
  }%
}

\def\link#1{%
  \mbox{[\hyperref[link:#1]{\nanchor{\ref*{link:#1}}}]}\xspace%
}

